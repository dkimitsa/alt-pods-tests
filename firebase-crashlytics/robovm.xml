<config>
    <executableName>${app.executable}</executableName>
    <mainClass>${app.mainclass}</mainClass>
    <os>ios</os>    
    <target>ios</target>
    <iosInfoPList>Info.plist.xml</iosInfoPList>
    <resources>
        <resource>
            <directory>../resources-common</directory>
        </resource>
        <resource>
            <directory>../resources-google</directory>
        </resource>
    </resources>

    <frameworkPaths>
        <path>../libs/firebase/crashlytics</path>
        <path>../libs/firebase/core</path>
    </frameworkPaths>
    <swiftSupport/> <!-- is required for Firebase 9+ as its swift based -->

    <tools>
        <linker>
            <flags>
                <flag>-ld_classic</flag>  <!-- Quick fix for Xcode15 -->
            </flags>
        </linker>
    </tools>
</config>